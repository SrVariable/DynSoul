---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contacto">
  <main class="text-slate-100">
    <section class="flex flex-col justify-center items-center">
      <h1 class="text-5xl my-5">Contacto</h1>
      <div>
        <p class="text-xl">Email: soporte@dynsoul.com</p>
        <p class="text-xl">Tel√©fono: +34 333 666 999</p>
      </div>
    </section>
    <section class="flex flex-col justify-center items-center my-5">
      <h2 class="text-4xl my-5">Redes sociales</h2>
      <section class="flex flex-col justify-center items-center">
        <a
          href="#"
          class="hover:bg-gradient-to-r from-orange-100 to-orange-500 rounded-full px-5"
        >
