---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="flex flex-col items-center min-h-screen text-center">
  <h1 class="text-slate-100 text-5xl text-center block py-5 max-w-lg">
    {title}
  </h1>
  <div class="text-slate-100 max-w-xl max-sm:max-w-80 max-sm:text-left">
    <slot name="description" />
  </div>
  <slot name="additional-content" />
</section>
